                    }
                  // jQuery( '#xlx_json' ).val( json_object ); //project json to textarea
                  // var output = capitalize(JSON.parse(obj);
                  MyLib.upload_json = objs
                })
              };
              reader.onerror = function(ex) {
                console.log(ex);
              };
              reader.readAsBinaryString(file);
            };
        };


        function handleFileSelect(evt) {
